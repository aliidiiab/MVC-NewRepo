                                <a id="signout"class="nav-link text-white" style="margin-right:5px"
                                asp-controller="Account" asp-action="Signout">Sign Out <i class="fa fa-sign-out" aria-hidden="true"></i></a>
                            </li> 
                         } 
                         @if(User.IsInRole("Admin"))
                        {
                            
                            <div class="dropdown show">
                              <a class="nav-link text-white dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          
                                Admin Panel <i class="fa fa-cogs" aria-hidden="true"></i> 

                              </a>
