@model CheckOutViewModel;

@{
    ViewData["Title"] = "Index";
}



<div class = "row" >

    <div class = "col-md-8 offset-2">

         <div class = "text-center">

             <h2>
                Check Out
             </h2>
           


        </div>


        <table class="table table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">Amount </th>
      <th scope="col">Type </th>
      <th scope="col">Price </th>
      <th scope="col">SubTotal </th>
      
    </tr>
  </thead>
  <tbody>

    @foreach (var item in Model.s1.ShoppingCart.ShoppingCartItems)
   {
    <tr>
        <td class = "align-middle">@item.Amount</td>
        <td class = "align-middle">@item.Product.ProductName</td>
        <td class = "align-middle">@item.Product.ProductPrice</td>
        <td class = "align-middle">@((item.Amount*item.Product.ProductPrice).ToString("c"))</td>
      

    </tr>   
   }

  </tbody>

  <tfoot>
      <tr>
          <td  >
               <b>
                   Total To Pay:
               </b>
          </td>
          <td >
           
          </td>
          <td class="text-danger">  @Model.s1.ShoppingCartTotal.ToString("c")</td>
          <td></td>
          <td></td>
          <td></td>
      </tr>
  </tfoot>

   <tfoot>
      <tr>
          <td  >
               <b>
                   Name :
               </b>
          </td>
          <td >
           
          </td>
          <td> @Model.userInfo.UserName</td>
          <td></td>
          <td></td>
          <td></td>
      </tr>
  </tfoot>

   <tfoot>
      <tr>
          <td  >
               <b>
                   Address:
               </b>
          </td>
          <td >
           
          </td>
          <td>  @Model.userInfo.Address</td>
          <td></td>
          <td></td>
          <td></td>
      </tr>
  </tfoot>

   <tfoot>
      <tr>
          <td  >
               <b>
                   Mobile:
               </b>
          </td>
          <td >
           
          </td>
          <td> @Model.userInfo.Phone</td>
          <td></td>
          <td></td>
          <td></td>
      </tr>
  </tfoot>
   <tfoot>
      <tr>
          <td  >
               <b>
                   Payment Method
               </b>
          </td>
          <td >
           
          </td>
           <div class="col-50">

              <div>
                  <td>
                              <input type="radio" id="html" name="fav_language" value="">
  <label for="html">Cash</label><br>
 </td>
 <td>
  <input type="radio" id="css" name="fav_language" value="">
  <label for="css">Visa</label><br>
 </td>
              
 <td>
 <label for="fname">Accepted Cards</label>
            <div class="icon-container" style="margin-bottom: 20px;
  padding: 7px 0;
  font-size: 24px;">
              <i class="fa fa-cc-visa" style="color:navy;"></i>
              <i class="fa fa-cc-amex" style="color:blue;"></i>
              <i class="fa fa-cc-mastercard" style="color:red;"></i>
              <i class="fa fa-cc-discover" style="color:orange;"></i>
            </div>
            
        </td>
          <td></td>
          <td></td>
          <td></td>
      </tr>
  </tfoot>

</table>
<div class="d-flex align-items-center justify-content-center">
<button class="btn btn-success" ac>Confirm Order</button>
</div>


</div>








    </div>

</div>

