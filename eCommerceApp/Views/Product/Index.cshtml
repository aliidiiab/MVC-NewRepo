@model List<Product>

<div class="d-flex align-items-center justify-content-around">
    @foreach (var item in Model)
    {   <div class="card mx-3 my-3 p-2" style="width: 18rem;">
            <img class="card-img-top" src="~/Images/@item.ProductImage" alt="Card image cap">
            <div class="card-body">
                <h6 class="card-title">Name: @item.ProductName</h6>
                <h6 class="card-text">Price: @item.ProductPrice $</h6>
                <a class="btn btn-success"asp-controller = "Orders" asp-action = "AddToShoppingCart" asp-route-id ="@item.ProductID">Add To Cart</a>
                <a class="btn btn-outline-primary"asp-controller = "product" asp-action = "ShowDetails" asp-route-id ="@item.ProductID">Details <i class="fa fa-eye" aria-hidden="true"></i></a>

                @if (User.IsInRole("Admin"))
                {
                    <a class="btn btn-warning" asp-controller="product" asp-action="editproduct" asp-route-id="@item.ProductID">Edit</a>
                    <a class="btn btn-danger" asp-controller="product" asp-action="deleteproduct" asp-route-id="@item.ProductID">Delete</a>
                }
            </div>
    </div>
    }
</div>